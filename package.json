{
    "name": "open-worship-app",
    "description": "Fully Open-Source and completely free forever for worship service.",
    "author": "Raksa Eng <eng.raksa@gmail.com> (https://www.linkedin.com/in/raks-eng/)",
    "homepage": "./",
    "version": "0.0.1",
    "main": "./electron/main.js",
    "scripts": {
        "start": "env-cmd -f .env react-scripts start",
        "build": "env-cmd -f .env react-scripts build",
        "dev": "concurrently -k \"npm start\" \"npm run electron\"",
        "electron": "wait-on tcp:3000 && env-cmd -f .env electron .",
        "test": "react-scripts test",
        "pack": "npm run build && electron-builder build --publish never",
        "pack:all": "npm run build && electron-builder build -mwl",
        "pack:mac": "npm run build && electron-builder build --mac",
        "pack:linux": "npm run build && electron-builder build --linux",
        "pack:win": "npm run build && electron-builder build --win --x64",
        "pack:win32": "electron-builder build --win --ia32 && npm i --build-from-source --target_arch=x64 sqlite3",
        "postinstall": "install-app-deps"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^11.2.7",
        "@testing-library/user-event": "^12.8.3",
        "@types/jest": "^26.0.24",
        "@types/react": "^17.0.27",
        "@types/react-color": "^3.0.6",
        "@types/react-dom": "^17.0.9",
        "bootstrap": "^5.1.3",
        "bootstrap-icons": "^1.6.0",
        "concurrently": "^6.3.0",
        "electron": "^16.0.6",
        "electron-builder": "^22.14.5",
        "env-cmd": "^10.1.0",
        "i18next": "^21.3.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-i18next": "^11.12.0",
        "react-scripts": "4.0.3",
        "sass": "^1.42.1",
        "typescript": "^4.4.3",
        "wait-on": "^6.0.0"
    },
    "build": {
        "extends": null,
        "productName": "Open Worship app",
        "appId": "app.openworship.desktop",
        "nodeGypRebuild": "true",
        "files": [
            "electron/*",
            "build/**/*",
            "dist/**/*",
            "package.json",
            "binding.gyp"
        ],
        "dmg": {
            "contents": [
                {
                    "x": 130,
                    "y": 220
                },
                {
                    "x": 410,
                    "y": 220,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "win": {
            "target": [
                "nsis"
            ]
        },
        "linux": {
            "target": [
                "deb",
                "AppImage"
            ],
            "category": "Productivity"
        },
        "directories": {
            "buildResources": "resources",
            "output": "release"
        },
        "nsis": {
            "allowToChangeInstallationDirectory": true,
            "oneClick": false,
            "license": "LICENSE.txt"
        }
    },
    "dependencies": {
        "sqlite3": "^5.0.2"
    }
}