{
    "name": "open-worship-app",
    "description": "Fully Open-Source and completely free forever for worship service.",
    "author": "Raksa Eng <eng.raksa@gmail.com> (https://www.linkedin.com/in/raks-eng/)",
    "homepage": "./",
    "version": "0.0.1",
    "main": "./electron-build/electron/index.js",
    "scripts": {
        "react:watch": "env-cmd -f .env react-scripts start",
        "react:build": "rm -rf dist && env-cmd -f .env react-scripts build",
        "dev": "concurrently -k \"npm run react:watch\" \"npm run electron:build && npm run electron\"",
        "electron:build": "rm -rf electron-build && tsc -p electron.tsconfig.json",
        "electron:build:watch": "tsc -p electron.tsconfig.json -w",
        "electron": "wait-on tcp:3000 && env-cmd -f .env electron .",
        "electron:watch": "nodemon --exec \"npm run electron\" --watch electron-build",
        "electron:dev": "npm run electron:build && concurrently -k \"npm run electron:build:watch\" \"npm run electron:watch\"",
        "build": "npm run build:native && npm run react:build && npm run electron:build",
        "build:native": "rm -rf build && node-gyp rebuild",
        "pack": "npm run build && electron-builder build --publish never",
        "pack:all": "npm run build && electron-builder build -mwl",
        "pack:mac": "npm run build && electron-builder build --mac",
        "pack:linux": "npm run build && electron-builder build --linux",
        "pack:win": "npm run build && electron-builder build --win --x64",
        "pack:win32": "electron-builder build --win --ia32",
        "postinstall": "install-app-deps"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "build": {
        "extends": null,
        "productName": "Open Worship app",
        "appId": "app.openworship.desktop",
        "nodeGypRebuild": "true",
        "files": [
            "electron-build/**/*",
            "build/**/*",
            "dist/**/*",
            "package.json",
            "binding.gyp"
        ],
        "dmg": {
            "contents": [
                {
                    "x": 130,
                    "y": 220
                },
                {
                    "x": 410,
                    "y": 220,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "win": {
            "target": [
                "nsis"
            ]
        },
        "linux": {
            "target": [
                "deb",
                "AppImage"
            ],
            "category": "Productivity"
        },
        "directories": {
            "buildResources": "resources",
            "output": "release"
        },
        "nsis": {
            "allowToChangeInstallationDirectory": true,
            "oneClick": false,
            "license": "LICENSE.txt"
        }
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.15.1",
        "@typescript-eslint/parser": "^4.15.1",
        "concurrently": "^6.3.0",
        "electron": "^21.1.1",
        "electron-builder": "^23.6.0",
        "env-cmd": "^10.1.0",
        "eslint": "^7.20.0",
        "node-addon-api": "^5.0.0",
        "node-gyp": "^9.3.0",
        "nodemon": "^2.0.19",
        "react-scripts": "5.0.1",
        "sass": "^1.54.1",
        "typescript": "^4.7.4",
        "wait-on": "^6.0.0"
    },
    "dependencies": {
        "@types/node": "^16.11.33",
        "@types/react": "^18.0.15",
        "@types/react-dom": "^18.0.6",
        "bootstrap": "^5.2.0",
        "bootstrap-icons": "^1.9.1",
        "electron-font-manager": "^0.0.1",
        "libreoffice-convert": "^1.4.1",
        "pdfjs-dist": "^2.16.105",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    }
}
